{% extends 'base.html.twig' %}

{% block title %}liste des evenements{% endblock %}

{% block body %}

    <h1>Evenements de la semaine</h1>

        {% for event in eventsList %}
            <table class="table">
                <tr><td>{{ event.nom }}</td></tr>
                <tr><td>Le {{ event.date|date('d-m-Y') }}</td></tr>
                <tr><td>Pour une dur√©e de {{ event.duree|date('h') }}h</td></tr>
                <tr><td>{{ event.nbPlace }} places pour chill</td></tr>
                <tr><td>Musique:{{ event.typeDeMusique }}</td></tr>
                <tr><td>{{ event.description }}</td></tr>
                <tr>
                    <td></td>
                    <td><a href={{ path('accueil.show', {id: event.id}) }}>Voir plus</a></td>
                </tr>
            </table>
        {% endfor %}

{% endblock %}