{% extends 'base.html.twig' %}


{% block title %}S'inscrire{% endblock %}


{% block body %}


    {% if app.user %}
    {% else %}
    {% endif %}
                                <h1> Inscription</h1>
                                    <form id="contactForm" name="contactForm" class="contactForm" method="post">
                                        <div class="row pt-2">
                                            {{ form_start(form) }}
                                            <div class="col-md-12">
                                                <div class="form-group pb-2">
                                                    {{ form_widget(form.email) }}
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group pb-2">
                                                    {{ form_widget(form.nom) }}
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group pb-2">
                                                    {{ form_widget(form.prenom) }}
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group pb-2">
                                                    {{ form_widget(form.telephone) }}
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group pb-2">
                                                    {{ form_widget(form.password.first) }}
                                                </div>
                                            </div>
                                            <div class="col-md-12" >
                                                <div class="form-group pb-2">
                                                    {{ form_widget(form.password.second) }}
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group pb-2">
                                                <input type="submit" value="inscription" style="color:white" class="btn btn-primary mb-2 mt-3">
                                                <div class="submitting"></div>
                                            </div>
                                        </div>
                                        {{ form_end(form) }}
                                    </div>
                                    </form>


{% endblock %}